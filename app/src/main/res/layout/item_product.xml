<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cardviewContainer"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProduct"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/test"/>

        <RatingBar
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ratingbarPointProduct"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:numStars="5"
            android:padding="2dp"
            android:rating="4.5" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:id="@+id/txtNameProduct"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Kệ Treo Tường 2 bộ ô vuông lồng và 3 Thanh Ngang Dài 40cm x Sâu 13cm"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:id="@+id/txtPriceProduct"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="200000đ"
            android:textColor="#6E48AA"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>